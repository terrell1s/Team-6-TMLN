@model IEnumerable<CookBook.Models.Ingredient>

@{
    ViewBag.Title = "Ingredients";
}
<body style="background-image:url(http://www.presentationmagazine.com/images3/background-design-orange1024.jpg)">
<h2>Ingredients</h2>

<p style="font-size:x-large">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="font-size:medium">
            @Html.DisplayNameFor(model => model.IngredientName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IngredientName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
</body>